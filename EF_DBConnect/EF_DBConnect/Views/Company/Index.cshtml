@{
    var listCompany = ViewBag.Companies as IEnumerable<Company>;
}

<div class="text-center">
    <h1 class="display-4">Company</h1>
    <div class="d-flex mb-2">
        <a asp-action="Create" asp-controller="Company" class="add" >Thêm mới doanh nghiệp</a>
    </div>
    
    <table class="table">
        <thead class="table-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Option</th>
        </tr>
        </thead>
        <tbody>
            @foreach(var item in listCompany)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="option" asp-controller="Company" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a class="option" asp-controller="Company" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash3"></i>
                        </a>                  
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
